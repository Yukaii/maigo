# Maigo Production Environment Configuration
# Copy this file to .env.production and update with your values

# Database Configuration
DB_NAME=maigo
DB_USER=maigo
DB_PASSWORD=your-secure-database-password-here
DB_PORT=5432

# Server Configuration
PORT=8080
HOST=0.0.0.0

# OAuth 2.0 Configuration
JWT_SECRET=your-secure-jwt-secret-minimum-32-characters
OAUTH2_CLIENT_ID=maigo-cli
OAUTH2_CLIENT_SECRET=your-secure-client-secret-here

# Application Configuration
GIN_MODE=release
LOG_LEVEL=info
LOG_FORMAT=json

# Short Code Configuration
SHORT_CODE_LENGTH=6

# Redis Configuration (optional, for caching)
REDIS_PASSWORD=your-secure-redis-password
REDIS_PORT=6379

# Security Notes:
# 1. Generate secure secrets: openssl rand -hex 32
# 2. Never commit .env.production to version control
# 3. Use strong passwords for all services
# 4. Change all default values in production
# 5. Enable SSL/TLS for database connections in production
