# Development environment variables
DB_HOST=localhost
DB_PORT=5432
DB_NAME=maigo_dev
DB_USER=postgres
DB_PASSWORD=password
DB_SSL_MODE=disable

# Server configuration
HTTP_PORT=8080
SSH_PORT=2222
HOST=127.0.0.1

# OAuth2 configuration
OAUTH2_CLIENT_ID=maigo_cli
OAUTH2_CLIENT_SECRET=dev_secret_change_in_production
